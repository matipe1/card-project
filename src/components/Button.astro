---
export interface Props {
    display: string;
    href: string;
}

const { display, href } = Astro.props as Props;
---

<div class="my-10"></div>
<a href={href} target="_blank" class="shadow-lg relative inline-flex items-center justify-start px-6 py-3 overflow-hidden font-medium transition-all bg-color1 rounded-xl group">
    <span class="absolute top-0 right-0 inline-block w-4 h-4 transition-all duration-500 ease-in-out bg-color2 rounded group-hover:-mr-4 group-hover:-mt-4">
    <span class="absolute top-0 right-0 w-5 h-5 rotate-45 translate-x-1/2 -translate-y-1/2 bg-white"></span>
    </span>
    <span class="absolute bottom-0 left-0 w-full h-full transition-all duration-500 ease-in-out delay-200 -translate-x-full translate-y-full bg-color2 rounded-2xl group-hover:mb-12 group-hover:translate-x-0"></span>
    <span class="relative w-full text-left text-[#4B4B4B] font-medium transition-colors duration-200 ease-in-out group-hover:text-white">{display}</span>
    </a>
</div>

