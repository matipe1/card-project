    #countdown span:first-child {
        margin-left: 0;
    }

    #countdown span:last-child {
        margin-right: 0;
    }

    #countdown span:before,
    #countdown span:after {
        content: ":";
        color: #fff;
    }

    #countdown span:last-child:before,
    #countdown span:last-child:after {
        content: "";
    }

    #countdown span:before {
        margin-right: -5px;
    }

    #countdown span:after {
        margin-left: -5px;
